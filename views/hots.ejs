<!DOCTYPE html>
<html lang="en">

  <head>
      <title>PolsTrack</title>
      <link rel="icon" type="image/x-icon" href="./img/favicon.ico">
      <link rel="shortcut icon" type="image/x-icon" href="./img/favicon.ico">
      <link rel="stylesheet" type="text/css" href="./css/hots.css">
      <script src="https://code.jquery.com/jquery-1.10.1.min.js"></script>
  </head>

  <body>

    <header>
      <div class="logo">
        <a href="./">PolsTrack</a>
      </div>
      <nav>
        <div class="item">
          <a href="./politician">新聞</a>
        </div>
        <div class="item">
          <a href="./compare">比較</a>
        </div>
        <div class="item current">
          <a href="./hots">熱門</a>
        </div>
      </nav>
    </header>

    <main>
      <div class="content scrollBar">
        <div class="tabs">
          <div class="tabFrom">
            <li class="tabTitle" id="politician">人物</li>
            <div class="pointer"></div>
          </div>
          <div class="tabFrom">
            <li class="tabTitle" id="issue">議題</li>
            <div class="pointer toggle"></div>
          </div>
        </div>

        <div class="lists scrollBar" id="oncomingHots" onscroll="paging('oncoming')">
          <% for(let i = 0; i < results.length; i++) { %>
            <% let maxCount = results[0].count; %>
            <% let thisCount = results[i].count; %>
            <% let ratio = (thisCount / maxCount) * 100; %>
            <div class="list">
              <div class="mainList" onclick="subListCallIssue(<%= results[i].tag_id %>,'<%= results[i].name %>')">
                <div class="polName"><%= results[i].name %></div>
                <div class="bar">
                  <div class="process" style="width:<%=ratio%>%"></div>
                </div>
              </div>
              <div class="subLists" id="<%= results[i].tag_id %>"></div>
            </div>
          <% } %>
        </div>

        <div class="lists scrollBar" id="appendHots" onscroll="paging('append')"></div>
      </div>

    </main>

    <footer>

    </footer>

  <script src="./js/hots.js"></script>

  </body>


</html>
